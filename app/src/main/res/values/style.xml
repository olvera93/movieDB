<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.MovieDb" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="SplashTheme" parent="Theme.MovieDb">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="SpecificCornerCut">
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="RoundedSquare">
        <item name="cornerSize">40%</item>
    </style>

    <color name="green">#6FF436</color>
</resources>